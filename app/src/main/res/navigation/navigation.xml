<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.dzakyhdr.challenge3.ui.FirstFragment"
        android:label="First"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        android:name="com.dzakyhdr.challenge3.ui.SecondFragment"
        android:label="Second"
        tools:layout="@layout/fragment_second" >
        <action
            android:id="@+id/action_secondFragment_to_thridFragment"
            app:destination="@id/thridFragment" />
    </fragment>
    <fragment
        android:id="@+id/thridFragment"
        android:name="com.dzakyhdr.challenge3.ui.ThridFragment"
        android:label="Thrid"
        tools:layout="@layout/fragment_thrid" >
        <action
            android:id="@+id/action_thridFragment_to_fourthFragment"
            app:destination="@id/fourthFragment" />
        <argument
            android:name="identity"
            app:argType="com.dzakyhdr.challenge3.data.Identity"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/fourthFragment"
        android:name="com.dzakyhdr.challenge3.ui.FourthFragment"
        android:label="Fourth"
        tools:layout="@layout/fragment_fourth" >
        <action
            android:id="@+id/action_fourthFragment_to_thridFragment"
            app:destination="@id/thridFragment"
            app:popUpTo="@id/secondFragment" />
        <argument
            android:name="name"
            app:argType="string" />
    </fragment>
</navigation>